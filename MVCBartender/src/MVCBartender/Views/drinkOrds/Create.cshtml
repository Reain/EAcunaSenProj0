@model MVCBartender.Models.drinkOrd

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Add drink to your order">
    <div class="form-horizontal">
        <h4>Drink Item</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group">
            <label asp-for="Id" class="col-md-2 control-label"></label>
            <div class="col-md-10">

                
    
              <select asp-for="Id" class ="form-control" asp-items="ViewBag.Id" value= @(ViewContext.RouteData.Values[drinkID])></select>
                
            </div>
        </div>


        <div class="form-group">
            <label asp-for="drinkQuant" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="drinkQuant" class="form-control" />
                <span asp-validation-for="drinkQuant" class="text-danger" />
            </div>
        </div>


        <div class="form-group">
            <label asp-for="orderComplete" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="orderComplete" class="form-control" />
                <span asp-validation-for="orderComplete" class="text-danger" />
            </div>
        </div>


        <div class="form-group">
            <label asp-for="totalPrice" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="totalPrice" class="form-control" />
                <span asp-validation-for="totalPrice" class="text-danger" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
